<!-- App Root -->

  <script type="text/x-handlebars" id="app">

    <header>

      <div class="navbar-fixed">

        <nav class="teal z-depth-2">
          <div class="nav-wrapper">

            <ul class="right">
              <li>{{#link-to 'app.main' class="waves-effect waves-light"}}<i class="material-icons">home</i>{{/link-to}}</li>
              <li>{{#link-to 'app.tasks' class="waves-effect waves-light"}}<i class="material-icons">list</i>{{/link-to}}</li>
              <li>{{#link-to 'app.tasks.create' class="waves-effect waves-light"}}<i class="material-icons">mode_edit</i>{{/link-to}}</li>
            </ul>

          </div>
        </nav>

      </div>

    </header>

    <div class="container" style="background:#FFF;margin-top:20px;height:120%;">
      {{outlet}}
    </div>

    <footer>
    </footer>

  </script>

  <!-- Main -->
  <script type="text/x-handlebars" id="app/main">
    <div class="row" style="padding-top:70px;">
      <div class="center-align">
        <img src="http://colobu.com/images/logos/ember.png" alt="" class="responsive-img" style="height:190px;">
      </div>

        <div class="col s10 offset-s1 center-align" style="margin-top:30px;">
          <div class="card teal darken-2 z-depth-3">
            <h2 style="color:white;">
                Sails/Ember Task List
            </h2>
          </div>
        </div>
    </div>
  </script>

  <!-- Task List -->

  <script type="text/x-handlebars" id="app/tasks/index">
    <div class="row" style="height: 100%;">
        <div class="col s12 center-align">
          <h2 style="color:#004d40;">
            {{#if model}}
              Task List
            {{else}}
              No current tasks
            {{/if}}
          </h2>
        </div>


      {{#each model as |task|}}

          <div class="col s10 offset-s1 card">
            <div class="row">

              <div class="col s8">
                <div class="row center-align">

                  {{#link-to 'app.tasks.task' task}}
                    <div class="col s12 m6" style="font-size:20px;padding-top:30px;">
                      <span class="valign">{{task.title}}</span>
                    </div>
                  {{/link-to}}
                  <div class="col s12 m6 center-align" style="font-size:20px;padding-top:30px;">
                    <span class=""> {{formatDate task}}</span>
                  </div>
                </div>
              </div>

              <div class="col s4">
                <div class="row">
                  <div class="col s12 center-align" style="height:60px;padding-top:30px;">
                      <a class="btn-floating waves-effect waves-light red lighten-2 hoverable" {{action 'destroy' task}}>
                        <i class="tiny material-icons">delete</i>
                      </a>
                  </div>
                </div>
              </div>

            </div>
          </div>

      {{/each}}

    </div>
  </script>


  <!-- Task Detail -->

  <script type="text/x-handlebars" id="app/tasks/task">

    <div class="row">
      <div class="col s12">
        <h1 class="center-align" style="#00796b">Task</h1>
      </div>
      <div class="input-field col s9 push-s1" style="padding-bottom:30px;">
          <i class="material-icons prefix">mode_edit</i>
          {{input id="ti_detail" type="text" value=model.title }}
          {{#unless model.title}}
            <label for="title">Title</label>
          {{/unless}}
      </div>
      <div class="input-field col s9 push-s1"  style="padding-bottom:30px;">
        <i class="material-icons prefix">comment</i>
        {{textarea id="desc_detail" value=model.body class="materialize-textarea"}}
        {{#unless model.body}}
          <label for="description">Description</label>
        {{/unless}}
      </div>
      <div class="input-field col s9 push-s1"  style="padding-bottom:30px;">
        <i class="material-icons prefix">date_range</i>
        {{input type="date" value=model.date class="datepicker"}}
      </div>
      <div class="col s6 center-align">
        <button class="btn-floating btn-small waves-effect waves-light btn red accent-2 z-depth-5 hoverable" {{action 'cancel'}}><i class="material-icons">undo</i></button>
      </div>
      <div class="col s6 center-align">
        <button class="btn-floating btn-small waves-effect waves-light z-depth-5 hoverable" {{action 'update' model}}><i class="material-icons">save</i></button>
      </div>
    </div>
  </script>


<!-- Task Create -->
<script type="text/x-handlebars" id="app/tasks/create">

  <div class="row">
    <div class="col s12">
      <h2 class="center-align" style="color:#00796b;">Create task</h2>
    </div>
    <div class="input-field col s9 push-s1" style="padding-bottom:30px;">
      <i class="material-icons prefix">title</i>
      {{input id="title_create" type="text" value=title class="validate" max-length="20" }}
      {{#unless title}}
        <label for="title">Title</label>
      {{/unless}}
    </div>
    <div class="input-field col s9 push-s1"  style="padding-bottom:30px;">
      <i class="material-icons prefix">description</i>
      {{textarea id="description_create" type="text" value=body class="materialize-textarea" length="50" }}
      {{#unless description}}
      <label for="description">Description</label>
      {{/unless}}
    </div>
    <div class="input-field col s9 push-s1"  style="padding-bottom:30px;">
      <i class="material-icons prefix">date_range</i>
      {{input type="date" value=date class="datepicker"Â style="position: relative; z-index: 100000;"}}
    </div>
    <div class="col s6 center-align">
      <button class="btn-floating btn-small waves-effect waves-light btn red accent-2 z-depth-5 hoverable" {{action 'cancel'}}><i class="material-icons">delete</i></button>
    </div>
    <div class="col s6 center-align">
      <button class="btn-floating btn-small waves-effect waves-light z-depth-5 hoverable" {{action 'create'}}><i class="material-icons">done</i></button>
    </div>
  </div>

</script>




